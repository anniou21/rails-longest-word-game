<div class="general">
  <div class="container">
    <h1>Games#new</h1>
    <h3>New game</h3>
    <div class="alphabet d-flex space-between">
      <% @letters.each do |letter| %>
      <li class="list"><%= letter %></li>
      <% end %>
    </div>
  </div>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group m-4 d-flex space-between">
    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="What is the longest word you can find ?">
  </div>
  <button type="submit" class="btn ml-4">Envoyer</button>
</div>

